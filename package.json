{
  "name": "thirty",
  "version": "1.0.0",
  "description": "Monorepo for thirty packages",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "build": "lerna exec -- npm run build",
    "build:clean": "lerna --scope thirty exec -- npm run build:clean",
    "start": "lerna exec -- npm start",
    "prettier:write": "lerna exec -- npm run prettier:write",
    "prettier:read": "lerna exec -- npm run prettier:read"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2",
    "ts-loader": "^6.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "author": "",
  "license": "ISC"
}
